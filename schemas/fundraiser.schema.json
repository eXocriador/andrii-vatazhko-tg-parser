{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/post.schema.json",
  "title": "TelegramPost",
  "type": "object",
  "required": ["tg_id", "type", "text", "date", "images", "links"],
  "properties": {
    "tg_id": { "type": "integer", "minimum": 1 },
    "type": { "type": "string", "enum": ["fundraising", "report"] },
    "text": { "type": "string", "minLength": 1 },
    "images": {
      "type": "array",
      "items": { "type": "string" },
      "default": []
    },
    "links": {
      "type": "array",
      "items": { "type": "string" },
      "default": []
    },
    "date": { "type": "string", "format": "date-time" }
  }
}

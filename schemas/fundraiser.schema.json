{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/fundraiser.schema.json",
  "title": "FundraiserPost",
  "type": "object",
  "required": [
    "uid",
    "channel_id",
    "message_id",
    "body",
    "original_posted_at",
    "collected_at",
    "donation_links",
    "tags",
    "media"
  ],
  "properties": {
    "uid": { "type": "string" },
    "channel_id": { "type": "integer" },
    "channel_username": { "type": ["string", "null"] },
    "message_id": { "type": "integer" },
    "title": { "type": ["string", "null"], "maxLength": 256 },
    "body": { "type": "string" },
    "original_posted_at": { "type": "string", "format": "date-time" },
    "collected_at": { "type": "string", "format": "date-time" },
    "amount_requested": { "type": ["integer", "null"] },
    "currency": { "type": ["string", "null"] },
    "donation_links": {
      "type": "array",
      "items": { "type": "string", "format": "uri-reference" },
      "default": []
    },
    "tags": {
      "type": "array",
      "items": { "type": "string" },
      "default": []
    },
    "media": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["kind"],
        "properties": {
          "kind": { "type": "string" },
          "file_name": { "type": ["string", "null"] },
          "mime_type": { "type": ["string", "null"] },
          "size": { "type": ["integer", "null"] },
          "caption": { "type": ["string", "null"] }
        }
      },
      "default": []
    },
    "source_url": { "type": ["string", "null"], "format": "uri" }
  }
}
